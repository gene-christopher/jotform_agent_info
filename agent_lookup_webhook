    <!-- Include JotForm Custom Widget API -->
    <script src="//js.jotform.com/JotFormCustomWidget.min.js"></script>
    
    <script type="text/javascript">
        /**
         * Agent Lookup Widget - Webhook Version
         * Displays comprehensive agent information received from Power Automate webhook
         * Designed to work with JotForm custom widgets and webhook integration
         */

        // Global variables
        let agentData = null;

        // Security: Validate that widget is accessed from JotForm
        function validateJotFormOrigin() {
            const allowedDomains = [
                'jotform.com',
                'submit.jotform.com',
                'form.jotform.com',
                'www.jotform.com'
            ];
            
            const referrer = document.referrer;
            const currentOrigin = window.location.origin;
            
            // Check if referrer is from JotForm
            const isJotFormReferrer = allowedDomains.some(domain => 
                referrer.includes(domain)
            );
            
            // Check if we're in a JotForm iframe context
            const isJotFormIframe = window.parent !== window && 
                window.parent.location.hostname.includes('jotform.com');
            
            // Additional security: Check for JotForm-specific parameters
            const urlParams = new URLSearchParams(window.location.search);
            const hasJotFormParams = urlParams.has('qid') || urlParams.has('isOpenedInPortal');
            
            if (!isJotFormReferrer && !isJotFormIframe && !hasJotFormParams) {
                console.warn('Agent Lookup Widget: Access denied - not from JotForm');
                showSecurityError();
                return false;
            }
            
            return true;
        }

        // Additional security: Validate JotForm API availability
        function validateJotFormAPI() {
            if (typeof JFCustomWidget === 'undefined') {
                console.warn('Agent Lookup Widget: JotForm API not available');
                showSecurityError();
                return false;
            }
            return true;
        }

        // Wait for JotForm Custom Widget API to be ready
        JFCustomWidget.subscribe("ready", function() {
            console.log('Agent Lookup Widget: Widget ready');
            
            // Validate API availability
            if (!validateJotFormAPI()) {
                return;
            }
            
            // Validate origin before proceeding
            if (!validateJotFormOrigin()) {
                return;
            }
            
            // Subscribe to form submission
            JFCustomWidget.subscribe("submit", function() {
                console.log('Agent Lookup Widget: Form submit triggered');
                handleFormSubmit();
            });
            
            // Subscribe to form reset
            JFCustomWidget.subscribe("reset", function() {
                console.log('Agent Lookup Widget: Form reset triggered');
                resetWidget();
            });
        });

        /**
         * Handle form submission - send agent data to JotForm
         */
        function handleFormSubmit() {
            console.log('Agent Lookup Widget: Handling form submit');
            
            if (agentData) {
                // Send all agent data to JotForm
                const submitData = {
                    valid: true,
                    value: JSON.stringify(agentData)
                };
                
                console.log('Agent Lookup Widget: Sending data to JotForm:', submitData);
                JFCustomWidget.sendSubmit(submitData);
            } else {
                // No data available
                const submitData = {
                    valid: false,
                    value: ""
                };
                
                console.log('Agent Lookup Widget: No data available, sending empty response');
                JFCustomWidget.sendSubmit(submitData);
            }
        }

        /**
         * Reset the widget to initial state
         */
        function resetWidget() {
            console.log('Agent Lookup Widget: Resetting widget');
            showLoading();
            agentData = null;
        }

        /**
         * Show loading state
         */
        function showLoading() {
            document.getElementById('loadingState').style.display = 'block';
            document.getElementById('errorState').style.display = 'none';
            document.getElementById('agentInfo').style.display = 'none';
        }

        /**
         * Show error state
         */
        function showError() {
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('errorState').style.display = 'block';
            document.getElementById('securityErrorState').style.display = 'none';
            document.getElementById('agentInfo').style.display = 'none';
        }

        /**
         * Show security error state
         */
        function showSecurityError() {
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('errorState').style.display = 'none';
            document.getElementById('securityErrorState').style.display = 'block';
            document.getElementById('agentInfo').style.display = 'none';
        }

        /**
         * Display agent information in the widget
         * @param {Object} data - Agent data object
         */
        function showAgentInfo(data) {
            console.log('Agent Lookup Widget: Displaying agent info:', data);
            
            agentData = data;
            
            // Update header with agent name and ID
            const firstName = data.look_up_FirstName || '';
            const lastName = data.look_up_LastName || '';
            const fullName = `${firstName} ${lastName}`.trim() || 'Unknown Agent';
            
            document.getElementById('agentName').textContent = fullName;
            document.getElementById('agentId').textContent = `ID: ${data.look_up_AgentID || 'N/A'}`;
            
            // Update avatar with first letter of name
            document.getElementById('agentAvatar').textContent = fullName.charAt(0).toUpperCase();
            
            // Update all information fields
            const fields = [
                'look_up_AgentID', 'look_up_NPN', 'look_up_agent_name', 'look_up_OptID',
                'look_up_Status', 'look_up_Division', 'look_up_ContractStartDt', 'look_up_ContractLevel',
                'look_up_FirstName', 'look_up_LastName', 'look_up_MiddleName',
                'look_up_StreetAddress', 'look_up_City', 'look_up_County', 'look_up_State',
                'look_up_Zip', 'look_up_AgentPhone'
            ];
            
            fields.forEach(field => {
                const element = document.getElementById(field);
                if (element) {
                    element.textContent = data[field] || '-';
                }
            });
            
            // Update status badge with appropriate styling
            const statusElement = document.getElementById('look_up_Status');
            if (statusElement && data.look_up_Status) {
                statusElement.className = 'info-value status-badge status-' + data.look_up_Status.toLowerCase();
            }
            
            // Show the agent info section
            document.getElementById('loadingState').style.display = 'none';
            document.getElementById('errorState').style.display = 'none';
            document.getElementById('agentInfo').style.display = 'block';
        }

        /**
         * Function to be called by JotForm webhook
         * This is the main entry point for receiving agent data
         * @param {Object} data - Complete agent data object from Power Automate
         */
        function updateAgentInfo(data) {
            console.log('Agent Lookup Widget: Received agent data from webhook:', data);
            
            if (data && data.data) {
                showAgentInfo(data.data);
            } else {
                console.error('Agent Lookup Widget: Invalid data structure received');
                showError();
            }
        }

        // Make the function globally available for JotForm webhook to call
        window.updateAgentInfo = updateAgentInfo;

        // Export for potential module usage
        if (typeof module !== 'undefined' && module.exports) {
            module.exports = { updateAgentInfo, showAgentInfo };
        }
    </script>
</body>
</html>
